<div class="flex flex-col">
  <h1 class="mb-4 font-bold text-2xl">Tasks</h1>

  <% if @tasks.blank? %>
    <p>There are no tasks, please add a task here: <%= link_to "Create task", new_task_path %>.</p>
  <% else %>
    <div class="flex flex-col">
      <% @tasks.each do |task| %>
        <div class="bg-yellow-50 mb-4 border-[1px] rounded border-gray-400 px-4 py-2">
          <p>Id: <% task.id %></p>
          <p><%= task.title %></p>
          <div class="mb-4 px-4 py-2">

            <p>Description: <%= task.description %></p>
          </div>
          <p> status: <%= task.status %></p>
          <p class="mb-4">Due on: <%= task.due.strftime("%d-%m-%Y") %></p>

          <div class="flex justify-between">
            <%= link_to "Show", task_path(task), class: "bg-gray-600 hover:bg-blue-700 text-white font-bold py-2 px-4" %>
            <%= button_to "delete", task_delete_path(task), method: :delete, class: "bg-gray-600 hover:bg-blue-700 text-white font-bold py-2 px-4", :data => { turbo: true, turbo_confirm: "Are you Sure? This cannot be undone" } %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
